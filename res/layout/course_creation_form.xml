<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/course_creation_form_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:text="Course Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/course_creation_form_name_box"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_name_title"
        android:layout_alignBottom="@+id/course_creation_form_name_title"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/course_creation_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_creation_form_name_box"
        android:layout_marginTop="48dp"
        android:text="Course Information"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/course_creation_form_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/course_creation_form_name_title"
        android:layout_below="@+id/course_creation_form_title"
        android:layout_marginTop="39dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/course_creation_form_time_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_time_title"
        android:layout_alignBottom="@+id/course_creation_form_time_title"
        android:layout_alignLeft="@+id/course_creation_form_name_box"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/course_creation_form_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/course_creation_form_time_title"
        android:layout_below="@+id/course_creation_form_time_spinner"
        android:layout_marginTop="25dp"
        android:text="Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/course_creation_form_date_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_date_title"
        android:layout_alignBottom="@+id/course_creation_form_date_title"
        android:layout_alignLeft="@+id/course_creation_form_time_spinner"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/course_creation_form_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/course_creation_form_date_title"
        android:layout_below="@+id/course_creation_form_date_spinner"
        android:layout_marginTop="30dp"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/course_creation_form_description_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_description_title"
        android:layout_alignBottom="@+id/course_creation_form_description_title"
        android:layout_alignLeft="@+id/course_creation_form_date_spinner"
        android:layout_alignParentRight="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/course_creation_form_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/course_creation_form_name_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:text="Add" />

</RelativeLayout>