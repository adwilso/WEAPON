<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/course_creation_form_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Add" />

    <EditText
        android:id="@+id/course_creation_form_description_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/course_creation_form_add_button"
        android:layout_alignLeft="@+id/course_creation_form_location_box"
        android:layout_alignParentRight="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/course_creation_form_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_description_box"
        android:layout_alignBottom="@+id/course_creation_form_description_box"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/course_creation_form_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Course Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/course_creation_form_name_box"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_name_title"
        android:layout_alignBottom="@+id/course_creation_form_name_title"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/course_creation_form_name_title" />

    <TextView
        android:id="@+id/course_creation_form_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/course_creation_form_description_box"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:text="Location"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TimePicker
        android:id="@+id/course_creation_form_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_creation_form_name_box"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/course_creation_form_description_title" />

    <TextView
        android:id="@+id/course_creation_form_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/course_creation_form_time_picker"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="48dp"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/course_creation_form_location_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_location_title"
        android:layout_alignBottom="@+id/course_creation_form_location_title"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/course_creation_form_name_title" />

    <Spinner
        android:id="@+id/course_creation_form_duration_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/course_creation_form_day_spinner"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/course_creation_form_time_picker"
        android:layout_marginTop="14dp" />

    <Spinner
        android:id="@+id/course_creation_form_day_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/course_creation_form_location_box"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/course_creation_form_name_title" />

    <TextView
        android:id="@+id/course_form_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_duration_spinner"
        android:layout_alignBottom="@+id/course_creation_form_duration_spinner"
        android:layout_alignParentLeft="true"
        android:text="Duration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/course_creation_form_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/course_creation_form_day_spinner"
        android:layout_alignBottom="@+id/course_creation_form_day_spinner"
        android:layout_alignParentLeft="true"
        android:text="Day"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>