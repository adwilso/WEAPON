<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_view_session"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/day_view_hour_text_box"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:gravity="right"
        android:paddingRight="1dp"
        android:text="Ben" />

    <RelativeLayout
        android:id="@+id/day_view_top_section"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/day_view_hour_text_box" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="29dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/day_view_bottom_section"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/day_view_top_section"
        android:layout_toRightOf="@id/day_view_hour_text_box" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

</RelativeLayout>