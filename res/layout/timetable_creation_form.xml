<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/timetable_creation_form_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="39dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/timetable_creation_form_edit_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timetable_creation_form_text_view"
        android:layout_alignBottom="@+id/timetable_creation_form_text_view"
        android:layout_marginLeft="46dp"
        android:layout_toRightOf="@+id/timetable_creation_form_text_view"
        android:inputType="text" />

    <Button
        android:id="@+id/timetable_creation_form_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/timetable_creation_form_edit_text"
        android:layout_marginBottom="52dp"
        android:onClick="onClick"
        android:text="Create" />

</RelativeLayout>