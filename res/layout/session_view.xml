<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/session_course_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Course"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/session_course_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />
        
        <TextView
            android:id="@+id/session_day_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Day"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/session_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />
        
        <TextView
            android:id="@+id/session_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Time"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/session_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />
        
        <TextView
            android:id="@+id/session_duration_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Duration"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/session_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />
        
        <TextView
            android:id="@+id/session_location_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/session_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />
        
        <TextView
            android:id="@+id/session_description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/session_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#353535" />
        
        <LinearLayout 
            android:id="@+id/session_view_buttons"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
      		android:orientation="horizontal"
      		android:padding="10dp">
            
            <Button 
                android:id="@+id/session_view_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:onClick="onClick"
        		/>
            
            <Button android:id="@+id/session_view_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:onClick="onClick"
                />
        </LinearLayout>
        
    </LinearLayout>

</ScrollView>